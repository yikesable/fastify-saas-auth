{
  "name": "@yikesable/fastify-saas-auth",
  "version": "0.8.7",
  "description": "Modular Fastify setup for SaaS application's authentication",
  "homepage": "http://github.com/yikesable/fastify-saas-auth",
  "repository": {
    "type": "git",
    "url": "git://github.com/yikesable/fastify-saas-auth.git"
  },
  "keywords": [
    "authentication",
    "fastify-saas-auth",
    "fastify"
  ],
  "author": "Pelle Wessman <pelle@yikesable.dev> (https://yikesable.dev/)",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "exports": "./index.js",
  "types": "index.d.ts",
  "files": [
    "/index.js",
    "/index.d.ts",
    "lib/*.js",
    "lib/*.d.ts",
    "lib/*.d.ts.map"
  ],
  "scripts": {
    "build:0": "run-s clean",
    "build:1-declaration": "tsc -p declaration.tsconfig.json",
    "build": "run-s build:*",
    "check:installed-check": "installed-check -i eslint-plugin-jsdoc -i knip",
    "check:knip": "knip",
    "check:lint": "eslint --report-unused-disable-directives .",
    "check:tsc": "tsc",
    "check:type-coverage": "type-coverage --detail --strict --at-least 95 --ignore-files 'test/*'",
    "check": "run-s clean && run-p check:*",
    "clean:declarations": "rm -rf $(find . -maxdepth 2 -type f -name '*.d.ts*' ! -name 'advanced-types.d.ts' ! -name 'index.d.ts')",
    "clean": "run-p clean:*",
    "prepare": "husky install",
    "prepublishOnly": "run-s build",
    "test:mocha": "c8 --reporter=lcov --reporter text mocha 'test/**/*.spec.js'",
    "test-ci": "run-s test:*",
    "test": "run-s check test:*"
  },
  "devDependencies": {
    "@fastify/request-context": "^5.0.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.18",
    "@voxpelli/eslint-config": "^18.0.0",
    "@voxpelli/tsconfig": "^8.0.0",
    "c8": "^8.0.0",
    "chai": "^4.3.7",
    "eslint": "^8.43.0",
    "eslint-plugin-es-x": "^7.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^46.2.6",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "fastify": "^4.18.0",
    "husky": "^8.0.3",
    "installed-check": "^8.0.0",
    "knip": "^2.14.2",
    "mocha": "^10.2.0",
    "npm-run-all2": "^6.0.5",
    "type-coverage": "^2.26.0",
    "typescript": "~5.1.6"
  },
  "dependencies": {
    "@fastify/secure-session": "^6.1.0",
    "fastify-plugin": "^4.5.0",
    "openid-client": "^5.4.2"
  },
  "peerDependencies": {
    "@fastify/request-context": "^5.0.0",
    "fastify": "^4.17.0"
  },
  "peerDependenciesMeta": {
    "@fastify/request-context": {
      "optional": true
    }
  }
}
